<style>
    body {
        margin: 0;
        padding: 0;
        background-image: url("https://source.unsplash.com/1600x900/?medical");
        background-repeat: no-repeat;
        background-size: cover;
    }

    .icon-bar {
        width: 100%;
        background-color: #56D;
        overflow: auto;
    }

        .icon-bar a {
            float: left;
            width: 20%;
            text-align: center;
            padding: 12px 0;
            transition: all 0.3s ease;
            color: white;
            font-size: 36px;
        }

            .icon-bar a:hover {
                background-color: #000;
            }

    .active {
        background-color: #04AA6D;
    }
</style>


<div class="icon-bar">
    <a asp-controller="User" asp-action="Index"><i class="fa-solid fa-user-pen" class="tooltip" data-placement="bottom" title="User Management"></i></a>
    <a asp-controller="Patient" asp-action="PatientDashboard"><i class="fa-solid fa-bed-pulse" class="tooltip" data-placement="bottom" title="Patient Management"></i></a>
    <a asp-controller="Medicine" asp-action="MedicineManage"><i class="fa-solid fa-pills" class="tooltip" data-placement="bottom" title="Medicine Management"></i></a>
    <a asp-controller="PrescriptionView" asp-action="PrescriptionManagement"><i class="fa-solid fa-prescription" class="tooltip" data-placement="bottom" title="Prescription Management"></i></a>
    <a asp-controller="Report" asp-action="PrescriptionReport"><i class="fa-solid fa-file" class="tooltip" data-placement="bottom" title="Report Management"></i></a>
</div>
