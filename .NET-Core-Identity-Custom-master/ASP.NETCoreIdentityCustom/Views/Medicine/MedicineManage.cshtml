@{
    ViewBag.Title = "Medicine Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src=" https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<style type="text/css">
    body {
        background-image: url("https://wallpapercave.com/wp/wp6864592.jpg");
        margin: 0;
        background-image: url("https://source.unsplash.com/1600x900/?medicine");
        background-repeat: no-repeat;
        background-size: cover;
    }

    .fa-sort, .fa-edit, .fa-check-square, .fa-times-circle {
        color: #5e98f2;
        cursor: pointer;
    }

    #ManagePager li:hover {
        cursor: pointer;
    }

    #tableid {
        opacity: 0.9;
    }

</style>

<script type="text/javascript" src="~/js/MedicineManageJS/MedicineJS.js"></script>

<br />
<br />
<br />
<body>
    <center><h2 style="font-weight: bolder;"> All Medicine Records</h2></center>

    @*this is table heading data*@
    <div>
        <div class="row">


            <div>
                <a class="btn btn-primary" asp-action="AddMedicine">Add Medicine</a>
            </div>
            <div class="col-lg-3 col-lg-offset-9">
                <input id="TxtMedicineSearch" type="text" placeholder="Search By Medicine Name.." maxlength="20" class="form-control" />
            </div>

            <hr />
            <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                <table class="table table-sm table-dark" id="table14">
                    <thead>
                        <tr class="text-center" id="tableid">
                            <th>
                                Sr. No.:
                            </th>
                            <th>
                                <i id="FirstNameSortingLink"></i> Medicine Name:
                            </th>
                            <th>
                                <i id="LastNameSortingLink"></i> Manufacturer:
                            </th>

                            <th>
                                <i id="EmailIdSortingLink"></i> Price:
                            </th>

                            <th>
                                Expiry Date
                            </th>

                            <th>
                                Stock
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>

                        </tr>
                    </thead>
                    <tbody id="UserTableBody">
                    </tbody>
                </table>
            </div>
        </div><hr />
    </div>

    @*this is edit popup model for medicine module*@
    <div class="modal fade" id="EditMedicineRecord" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">

                    <h3 class="modal-title"><i class="fa fa-edit"></i> Update Member Record</h3>
                    <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <span>Medicine Name:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa-solid fa-pills"></i></span>
                                    <input id="TxtMedicineName" type="text" placeholder="Medicine Name.." maxlength="50" class="form-control" />
                                </div>
                                <small id="TxtMedicineNameValidate" class="text-danger"></small>
                            </div>

                            <div class="form-group">
                                <span>Manufacturer:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa-solid fa-industry"></i></span>
                                    <input id="TxtManufacturerName" type="text" placeholder="Enter Manufacturer Name.." maxlength="50" class="form-control" />
                                </div>
                                <small id="TxtManufacturerNameValidate" class="text-danger"></small>
                            </div>

                            <div class="form-group">
                                <span>Price:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    <input id="TxtPrice" type="text" placeholder="Enter Medicine Price.." maxlength="5" class="form-control" />
                                </div>
                                <small id="TxtPriceValidate" class="text-danger"></small>
                            </div>

                            <div class="form-group">
                                <span>Expary Date:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa-solid fa-hand-holding-dollar"></i></span>
                                    <input id="TxtDate" type="text" placeholder="Enter Medicine Quantity.." maxlength="5" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <span>Stock:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa-solid fa-rotate"></i></span>
                                    <input id="TxtStock" type="text" placeholder="Enter Medicine Quantity.." maxlength="5" class="form-control" />
                                </div>
                                <small id="TxtStockValidate" class="text-danger"></small>
                            </div>
                            <div class="form-group text-right">
                                <a id="BtnUpdateRecord" class="btn btn-primary"><i class="fa fa-edit" style="color:white!important"></i> Update</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</body>